# Seurat Object Viewer - Configuration File
# Copy this file to config.yaml and customize as needed

# Display limits
max_cells_display: 10000      # Maximum cells to display in plots
max_features_display: 100     # Maximum features to show in tables by default
matrix_sample_size: 1000      # Number of cells/features to sample for matrix preview

# Default visualization settings
default_reduction: "umap"     # Default reduction to display (umap, tsne, pca, etc.)
color_palette: "viridis"      # Color palette: viridis, plasma, inferno, magma, rainbow
plot_theme: "minimal"         # ggplot2 theme: minimal, classic, bw, light, dark

# Plot aesthetics
point_size: 1.0               # Point size for scatter plots
point_alpha: 0.8              # Point transparency (0-1)
show_legend: true             # Show legends on plots

# Matrix viewing
show_sparse_info: true        # Display sparsity statistics
default_matrix_rows: 50       # Default rows to display in matrix tables
default_matrix_cols: 20       # Default columns to display in matrix tables

# Performance settings
enable_caching: true          # Cache computed results
parallel_processing: false    # Use parallel processing (experimental)
max_upload_size_mb: 10240       # Maximum upload file size in MB (10GB)

# Feature plots
default_features: []          # List of features to show by default, e.g. ["CD3D", "CD8A"]
split_by_default: null        # Default metadata column to split plots by

# Table display
rows_per_page: 25             # Rows per page in data tables